---
import PageLayout from "../../layouts/page.layout.astro";
---

<PageLayout title="Colours - Style Guide">
  <p>
    <a href="/style-guides/markdown">View Markdown</a>
    <a href="/style-guides/code">View Code</a>
    <a href="/style-guides/colours">View Colours</a>
    <a href="/style-guides/html">View Html</a>
  </p>
  <h1 style="text-align: center;">My Colour Pallet</h1>

  <div class="group">
    <div class="colour-group orange">
      <div class="colour" style="background-color: #fe7d2d;">
        <h2>Burnt Orange</h2>
      </div>
      <table>
        <tr>
          <th>HEX</th>
          <td>#FE7D2D</td>
        </tr>
        <tr>
          <th>RGB</th>
          <td>254, 125, 45</td>
        </tr>
        <tr>
          <th>CMYK</th>
          <td>0, 51, 82, 0</td>
        </tr>
      </table>
    </div>

    <div class="colour-group purple">
      <div class="colour" style="background-color: #7D2DFE;">
        <h2 style="color:#fff;">Electric Violet</h2>
      </div>
      <table>
        <tr>
          <th>HEX</th>
          <td>#7D2DFE</td>
        </tr>
        <tr>
          <th>RGB</th>
          <td>125, 45, 254</td>
        </tr>
        <tr>
          <th>CMYK</th>
          <td>51, 82, 0, 0</td>
        </tr>
      </table>
    </div>

    <div class="colour-group green">
      <div class="colour" style="background-color: #2DFE7D;">
        <h2>Spring Green</h2>
      </div>
      <table>
        <tr>
          <th>HEX</th>
          <td>#2DFE7D</td>
        </tr>
        <tr>
          <th>RGB</th>
          <td>45, 254, 125</td>
        </tr>
        <tr>
          <th>CMYK</th>
          <td>82, 0, 51, 0</td>
        </tr>
      </table>
    </div>

    <div class="colour-group black">
      <div class="colour" style="background-color: #222222;">
        <h2 style="color:#fff;">Nero</h2>
      </div>
      <table>
        <tr>
          <th>HEX</th>
          <td>#222222</td>
        </tr>
        <tr>
          <th>RGB</th>
          <td>34, 34, 34</td>
        </tr>
        <tr>
          <th>CMYK</th>
          <td>0, 0, 0, 87</td>
        </tr>
      </table>
    </div>
  </div>
</PageLayout>
