---
import PageLayout from "@/layouts/portfolio-page.layout.astro";

import { getCollection, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
    const postsCollection: CollectionEntry<"post">[] =
        await getCollection("post");
    return postsCollection.map((item) => ({
        params: { slug: item.slug },
        props: item,
    }));
}
type Props = CollectionEntry<"post">;

const post = Astro.props;

const { Content } = await post.render();
const { title, description } = post.data;

---

<PageLayout title={title} description={description}>
    <article class="post-content">
        <div class="back-link-container">
            <a href="/posts" class="back-link">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="1.25rem" height="1.25rem">
                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                </svg>
                Back to Posts
            </a>
        </div>
        <Content />
    </article>
</PageLayout>

<style>
    .post-content {
        padding: var(--spacing-lg);
    }

    .back-link-container {
        margin-bottom: var(--spacing-xl);
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: var(--spacing-xs);
        color: var(--secondary);
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .back-link:hover {
        color: var(--primary);
    }

    /* Content Styles */
    .post-content :global(h1) {
        color: var(--primary);
        font-size: 2.5rem;
        margin: var(--spacing-lg) 0;
    }

    .post-content :global(h2) {
        color: var(--primary);
        font-size: 2rem;
        margin: var(--spacing-lg) 0 var(--spacing-md);
    }

    .post-content :global(h3) {
        color: var(--primary);
        font-size: 1.5rem;
        margin: var(--spacing-md) 0;
    }

    .post-content :global(p) {
        color: var(--secondary);
        line-height: 1.75;
        margin: var(--spacing-md) 0;
    }

    .post-content :global(ul), .post-content :global(ol) {
        color: var(--secondary);
        line-height: 1.75;
        margin: var(--spacing-md) 0;
        padding-left: var(--spacing-xl);
    }

    .post-content :global(li) {
        margin: var(--spacing-xs) 0;
    }

    .post-content :global(pre) {
        border-radius: var(--border-radius);
        padding: var(--spacing-md);
        margin: var(--spacing-md) 0;
        overflow-x: auto;
    }

    .post-content :global(code) {
        font-family: monospace;
        padding: var(--spacing-xs) var(--spacing-sm);
        border-radius: var(--border-radius);
    }

    .post-content :global(blockquote) {
        border-left: 4px solid var(--primary);
        margin: var(--spacing-md) 0;
        padding: var(--spacing-sm) var(--spacing-lg);
        background-color: var(--secondary-transparent);
    }

    .post-content :global(img) {
        max-width: 100%;
        height: auto;
        border-radius: var(--border-radius);
        margin: var(--spacing-md) 0;
    }

    @media (max-width: 768px) {
        .post-content {
            padding: var(--spacing-md);
        }

        .post-content :global(h1) {
            font-size: 2rem;
        }

        .post-content :global(h2) {
            font-size: 1.75rem;
        }

        .post-content :global(h3) {
            font-size: 1.5rem;
        }
    }
</style>
